<%= simple_form_for([@customer, @pet], :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name%><br />
    <%= f.input :description%><br />
    <%= f.input :age%><br />
    <%= f.input :special_notes%><br />
    <%= f.input :dietry_requirements%><br />


  </div>
  	<%= f.error :base %>
    <%= f.button :submit %>
  </div>
<% end %>
