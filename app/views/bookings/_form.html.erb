<%= simple_form_for(@booking, :html => {:class => 'form-horizontal' }) do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% @booking.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.input :name %><br />
    <%= f.input :address %><br />
    <%= f.input :phone %><br />
    <%= f.input :email, placeholder: 'user@domain.com' %><br />
    <%= f.input :dropoff_date, as: :date %><br />
    <%= f.input :pickup_date, as: :date %><br />
    <%= f.input :dog_count, collection: 1..3, prompt: "How many dogs" %><br />
    <%= f.input :pickup_required, as: :radio_buttons %><br />
    <%= f.button :submit %>
  </div>
<% end %>
