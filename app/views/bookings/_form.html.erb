<%= simple_form_for( @booking, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">


<%= f.input :dropoff_date, as: :datepicker %><br />
<%= f.input :pickup_date, as: :datepicker %><br />

<%= f.input :visitors,as: :check_boxes, collection: current_customer.pets, value_method: :name, include_blank: "Test", hint: 'Whose coming?'  %><br />
<%= f.input :pickup_required, as: :radio_buttons, hint: 'Does Fido need do be picked up? ' %><br />

  </div>
    <%= f.error :base %>
    <%= f.submit "Save", :class => "btn btn-primary"  %>
<% end %>