<%= simple_form_for([@customer, @address], :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

<div class='well'>
  <div class="form-inputs">    
	 	<%= f.input :line1, label: "Address line 1" %><br />
	  <%= f.input :line2, label: "Address line 2"%><br />
	  <%= f.input :suburb %><br />
	  <%= f.input :state %><br />	  
	  <%= f.input :post_code%><br />

  </div>
  	<%= f.error :base %>
    <%= f.button :submit, "Save", :class => "btn btn-success" %>
  </div>
  <% end %>

</div>
