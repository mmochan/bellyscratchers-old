<%= simple_form_for(@customer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :phone %>

	  <%= f.simple_fields_for :address do |address| %>
	    <%= render :partial => 'shared/address', :locals => {:f => address} %>
	  <% end %>
  </div>
  	<%= f.error :base %>
    <%= f.button :submit %>
  </div>
<% end %>
