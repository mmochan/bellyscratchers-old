<%= simple_form_for(@customer, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :phone %>

	  <%= f.simple_fields_for :address do |address| %>
	    <%= render :partial => 'shared/address', :locals => {:f => address} %>
	  <% end %>

	  <%= f.simple_fields_for :booking do |booking| %>
	    <%= render :partial => 'shared/booking', :locals => {:f => booking} %>
	  <% end %>

  </div>
  	<%= f.error :base %>
    <%= f.button :submit %>
  </div>
<% end %>
