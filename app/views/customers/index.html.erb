<h1>Your details</h1>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
    </tr>
  </thead>
<% @customers.each do |customer| %>
  <tbody>
    <tr>
      <td><%= customer.name%></td>
      <td><%= customer.phone%></td>
      <td><%= customer.email%></td>
    </tr>
  </tbody>
<% end %>
</table>
<h1>Your Address</h1>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Line1</th>
      <th>Line2</th>
      <th>City</th>
      <th>State</th>
      <th>Postcode</th>              
    </tr>
  </thead>
<% @customers.each do |customer| %>
  <tbody>
    <tr>
      <td><%= customer.address.line1%></td>
      <td><%= customer.address.line2%></td>
      <td><%= customer.address.city%></td>
      <td><%= customer.address.state%></td>
      <td><%= customer.address.post_code%></td>            
    </tr>
  </tbody>
<% end %>
</table>

<br />

<%= link_to 'My Bookings', bookings_path, :class => "btn btn-primary"%>
